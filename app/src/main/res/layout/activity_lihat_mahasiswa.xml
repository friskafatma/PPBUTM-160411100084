<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".LihatMahasiswa">

    <TextView
        android:id="@+id/txt_lihat_mhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="MAHASISWA"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/txt_nrp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_lihat_mhs"
        android:layout_marginBottom="8dp"
        android:text="NRP"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lihat_nrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_lihat_mhs"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/txt_nrp"
        android:text="160411100084"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nrp"
        android:layout_marginBottom="8dp"
        android:text="Nama"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lihat_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lihat_nrp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/txt_nrp"
        android:text="Friska Fatmawatiningrum"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_alamat"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nama"
        android:layout_marginBottom="8dp"
        android:text="Alamat"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lihat_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lihat_nama"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/txt_nrp"
        android:text="Ds. Pandu Kec. Cerme Kab. Gresik"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lihat_alamat"
        android:text="Kembali"
        android:onClick="buttonBack"/>

</RelativeLayout>